{
  "name": "metin2-patcher-electron",
  "author": "Karbust",
  "description": "A simple metin2 patcher made in Electron with React and TypeScript.",
  "version": "0.1.0",
  "private": true,
  "main": "build/electron/src_electron/App.js",
  "homepage": "./",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "electron-start": "tsc --project src_electron/tsconfig.json && electron build/electron/src_electron/App.js",
    "electron-pack": "yarn build && tsc --project src_electron/tsconfig.json && electron-builder --win -c.extraMetadata.main=build/electron/src_electron/App.js",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "lint-fix": "eslint src/**/*.{js,jsx,ts,tsx} --fix",
    "css-lint": "npx stylelint \"src/**/*.css\"",
    "css-lint-fix": "npx stylelint \"src/**/*.css\" --fix"
  },
  "build": {
    "extends": null,
    "productName": "Metin2 Patcher Electron",
    "compression": "maximum",
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "portable": {
      "artifactName": "metin2_patcher_electron.exe",
      "requestExecutionLevel": "admin",
      "unpackDirName": "metin2_patcher_electron"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "electron": "^12.0.6",
    "electron-is-dev": "^2.0.0",
    "i18next": "^20.2.2",
    "is-online": "^9.0.0",
    "mkdirp": "^1.0.4",
    "nedb": "^1.8.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.15",
    "react-scripts": "^4.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.1.2",
    "@types/mkdirp": "^1.0.1",
    "@types/nedb": "^1.8.11",
    "@types/node": "^15.0.2",
    "@types/node-fetch": "^2.5.10",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "autoprefixer": "9",
    "electron-builder": "^22.11.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-flowtype": "^5.7.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "7",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
